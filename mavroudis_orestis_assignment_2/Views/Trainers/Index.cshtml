@model IEnumerable<mavroudis_orestis_assignment_2.Models.Trainer>

@{
    ViewBag.Title = "Trainers";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Trainer", "Create")
</p>
@using (Html.BeginForm("Index", "Trainers", FormMethod.Get))
{
    <p>
        @*Show trainers of subject: @Html.TextBox("selectedSubject", ViewBag.subjectFilter as string)*@
        Subject: @Html.DropDownList("selectedSubject", "All")
        <input type="submit" value="Filter"/>
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Last Name", "Index", new { sortOrder = ViewBag.sortParam })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
